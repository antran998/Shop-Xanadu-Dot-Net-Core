        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());

            gtag('config', 'UA-153519325-1', {
                'page_title': 'Home',
                'page_title': 'Products',
