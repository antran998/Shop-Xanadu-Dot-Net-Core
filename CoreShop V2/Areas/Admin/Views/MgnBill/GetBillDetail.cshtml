@model CoreShop_V2.Areas.Admin.ViewModel.BillMgnViewModel

@{
    ViewData["Title"] = "GetBillDetail";
}

@* Bill *@
<div id="invoice-POS">
    <center id="top">
        <div class="logo"></div>
    </center><!--End InvoiceTop-->

    <div id="mid">
        <div class="info">
            <h2>Receipt Info</h2>
            <p>
                Purchase Time : @Model.CreateDate<br>
                Purchase By : Paypal<br>
                CustomerEmail: @Model.CustomerEmail
            </p>
        </div>
    </div><!--End Invoice Mid-->

    <div id="bot">

        <div id="table">
            <table>

                <tr class="tabletitle">
                    <td class="item"><h2>Item</h2></td>
                    <td class="Hours"><h2>Quantity</h2></td>
                    <td class="Rate"><h2>Sub Total</h2></td>
                </tr>

                @foreach (var item in Model.BillDetails)
                {
                    var subTotal = item.TotalPrice;
                    <tr class="service">
                        <td class="tableitem"><p class="itemtext">@item.ProductName</p></td>
                        <td class="tableitem"><p class="itemtext">@item.Quantity</p></td>
                        <td class="tableitem"><p class="itemtext">@subTotal $</p></td>
                    </tr>
                }

                <tr class="tabletitle">
                    <td class="Rate"><h2>Shipping</h2></td>
                    <td></td>
                    <td class="payment"><h2>2$</h2></td>
                </tr>

                <tr class="tabletitle">
                    <td class="Rate"><h2>Total</h2></td>
                    <td></td>
                    <td class="payment"><h2>@Model.BillDetails.Sum(x => x.TotalPrice + 2)$</h2></td>
                </tr>

            </table>
        </div><!--End Table-->
    </div><!--End InvoiceBot-->
</div><!--End Invoice-->
@* Bill *@

