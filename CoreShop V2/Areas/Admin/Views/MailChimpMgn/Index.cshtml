
@{
    ViewData["Title"] = "MailChimpMgn";
}

<!-- Container fluid  -->
    <div class="container-fluid">        
        <!-- Start Page Content -->
        <div class="row item-row">
            <div class="col-2"></div>
            <div class="col-8" style="background: white; box-shadow:0 5px 20px rgba(0, 0, 0, 0.05); padding:20px;">
                <h1>Create Campaign Mailchimp</h1>
                <div class="form-group">
                    <input type="text" class="form-control" id="ReplyTo" aria-describedby="emailHelp" placeholder="Reply To">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="FromName" placeholder="From name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="Title" placeholder="Title">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="SubjectLine" placeholder="Subject Line">
                </div>

                <button class="btn btn-primary" id="Submit">Submit</button>
            </div>
            <div class="col-2"></div>
        </div>
        </div>
@section Scripts{
    <script>
    $("#Submit").click(function () {
        var ReplyTo = $("#ReplyTo").val();
        var FromName = $("#FromName").val();
        var Title = $("#Title").val();
        var SubjectLine = $("#SubjectLine").val();
        alert(ReplyTo);
         $.ajax({
            url: "/CreateMailCampaign",
            type: "POST",
            data: {
                ReplyTo: ReplyTo,
                FromName: FromName,
                Title: Title,
                SubjectLine:SubjectLine
            },
            success: function (result) {
                Swal.fire(
                    'Success',
                    'Create Successfull',
                    'success'
                )
            }
        });


    });
    </script>
}


